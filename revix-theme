#!/bin/bash
# Reviactyl Theme Installation Script

# Install requirements (NodeJS 16 + Yarn)
curl -sL https://deb.nodesource.com/setup_16.x | sudo -E bash -
sudo apt install -y nodejs
npm i -g yarn

# Go to Pterodactyl directory
cd /var/www/pterodactyl || exit

# Download Reviactyl theme
wget https://github.com/reviactyl/panel/releases/download/v2.0-6/reviactyl-v2.0-6.zip -O reviactyl.zip

# Extract the theme
unzip -o reviactyl.zip
rm reviactyl.zip

# Run installer
chmod +x install.sh
./install.sh

# Clear Laravel views
php artisan view:clear

echo "âœ… Reviactyl has been installed successfully!"
